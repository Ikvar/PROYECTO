<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:onClick="buscador"
        android:text="Busqueda de cartas"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="105dp" />

    <Button
        android:id="@+id/btnContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="contador"
        android:text="Contador de vidas"
        app:layout_constraintTop_toBottomOf="@+id/btnBusqueda"
        tools:layout_editor_absoluteX="111dp" />

    <Button
        android:id="@+id/btnMazos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="mazos"
        android:text="Mazos guardados"
        app:layout_constraintTop_toBottomOf="@+id/btnContador"
        tools:layout_editor_absoluteX="113dp" />

    <Button
        android:id="@+id/btnHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="historial"
        android:text="Historial de partidas"
        app:layout_constraintTop_toBottomOf="@+id/btnMazos"
        tools:layout_editor_absoluteX="99dp" />
</android.support.constraint.ConstraintLayout>